// Analisador de numeros 

#include <stdio.h>

int main() {
    int numeros[10];
      int i, maior, menor;
        int pares = 0, impares = 0;
          float soma = 0, media;
            int x, encontrado = -1;

    printf("Digite 10 numeros inteiros:\n");
    for (i = 0; i < 10; i++) {
        scanf("%d", &numeros[i]);
    }

    printf("\nNumeros digitados:\n");
    for (i = 0; i < 10; i++) {
        printf("%d ", numeros[i]);
    }

    maior = numeros[0];
    menor = numeros[0];

    for (i = 0; i < 10; i++) {    // Processamento: maior, menor, pares, ímpares, som
        if (numeros[i] > maior)
            maior = numeros[i];

            if (numeros[i] < menor)
                menor = numeros[i];

              if (numeros[i] % 2 == 0)
                    pares++;
        else
            impares++;

        soma += numeros[i];
    }

    media = soma / 10;


    printf("\n\nMaior numero: %d", maior);
    printf("\nMenor numero: %d", menor);
    printf("\nQuantidade de pares: %d", pares);
    printf("\nQuantidade de impares: %d", impares);
    printf("\nMedia aritmetica: %.2f\n", media);

    printf("\nDigite um numero X para procurar no vetor: ");
    scanf("%d", &x);

    for (i = 0; i < 10; i++) {
        if (numeros[i] == x) {
            encontrado = i; // guarda a posição
            break;
        }
    }

    // Busca
    if (encontrado != -1)
        printf("O numero %d foi encontrado na posicao (indice): %d\n", x, encontrado);
    else
        printf("O numero %d nao foi encontrado no vetor.\n", x);

    return 0;
}
