// Uso do comenado break e continue

#include <stdio.h>

int main() {
    int num;

    printf("Digite numeros inteiros (0 para parar):\n");

    while (1) { 
        scanf("%d", &num);

        if (num == 0) {
            printf("Programa encerrado.\n");
            break;  
        }

        printf("Voce digitou: %d\n", num);
    }

    return 0;
}
