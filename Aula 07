    #include <stdio.h> 

        int main () {
            
        float valor_a, valor_b, valor_c;
        int media;
        int condicao = 1;

        while (condicao == 1 )
        {
            // Meu codigo de media 

            printf("Digite tres valores: ");
            scanf ("%f,%f,%f", &valor_a,&valor_b,&valor_c);

            media = (valor_a+valor_b+valor_c)/3;
            printf ("Sua media e: %f\n, media ");

            printf("\n Digite 0 para terminar e 1 para continuar");
            scanf("%d", &condicao);
        }

            // O loop termina quando

            printf(" \n o programa termina ");

            return 0;
        }
