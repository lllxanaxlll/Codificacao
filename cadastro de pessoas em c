#include <stdio.h>
#include <string.h>

#define QTD_PESSOAS 5

struct Pessoa {
    char nome[100];
    int ano_nascimento;
    char sexo;
    float altura;
    float peso;
    double cpf;
};

int main() {
    struct Pessoa pessoas[QTD_PESSOAS];

    for (int i = 0; i < QTD_PESSOAS; i++) {
        printf("\n=== Cadastro da %dª pessoa ===\n", i + 1);

        printf("Nome: ");
        fgets(pessoas[i].nome, sizeof(pessoas[i].nome), stdin);
        // Remove o \n do final, se existir
        pessoas[i].nome[strcspn(pessoas[i].nome, "\n")] = '\0';

        printf("Ano de nascimento: ");
        scanf("%d", &pessoas[i].ano_nascimento);

        // Limpa buffer antes de ler o sexo
        getchar();
        do {
            printf("Sexo (M/F): ");
            scanf("%c", &pessoas[i].sexo);
            getchar(); // limpa buffer
            if (pessoas[i].sexo != 'M' && pessoas[i].sexo != 'F' &&
                pessoas[i].sexo != 'm' && pessoas[i].sexo != 'f') {
                printf("Entrada inválida! Digite apenas M ou F.\n");
            }
        } while (pessoas[i].sexo != 'M' && pessoas[i].sexo != 'F' &&
                 pessoas[i].sexo != 'm' && pessoas[i].sexo != 'f');

        printf("Altura (em metros): ");
        scanf("%f", &pessoas[i].altura);

        printf("Peso (em kg): ");
        scanf("%f", &pessoas[i].peso);

        printf("CPF (somente números): ");
        scanf("%lf", &pessoas[i].cpf);

        getchar(); // limpa o buffer antes da próxima iteração
    }

    printf("\n=== LISTA DE PESSOAS CADASTRADAS ===\n");
    for (int i = 0; i < QTD_PESSOAS; i++) {
        printf("\nPessoa %d:\n", i + 1);
        printf("Nome: %s\n", pessoas[i].nome);
        printf("Ano de nascimento: %d\n", pessoas[i].ano_nascimento);
        printf("Sexo: %c\n", pessoas[i].sexo);
        printf("Altura: %.2f m\n", pessoas[i].altura);
        printf("Peso: %.2f kg\n", pessoas[i].peso);
        printf("CPF: %.0lf\n", pessoas[i].cpf);
    }

    return 0;
}